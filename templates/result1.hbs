<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Disease Detection Result</title>
    <link rel="stylesheet" href="result1.css">
</head>
<body>
    <!-- Navigation Bar -->
    <nav>
        <div class="logo">
            <img src="MP_images/logo.png" alt="AgriDiagnosis Logo">
            <h1>Agri-Diagnosis</h1>
        </div>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
        <div class="buttons">
            <button class="login-btn">Log In</button>
            <button class="signup-btn">Sign Up</button>
        </div>
    </nav>

    <div class="container">
        <h1>Your Result is Here!</h1>

        <!-- Disease Information -->
        <div class="disease-info">
            <p><strong>Predicted Disease:</strong> {{ prediction }}</p>
            <p><strong>Description:</strong></p>
            <ul>
                {{#each description}}
                    <li>{{ this }}</li> <!-- Display each item as a bullet point -->
                {{/each}}
            </ul>

            <p><strong>Treatment:</strong></p>
            <ul>
                {{#each treatment}}
                    <li>{{ this }}</li> <!-- Display each item as a bullet point -->
                {{/each}}
            </ul>

            <p><strong>Pesticides:</strong></p>
       <ul>
           {{#each pesticides}}
        <li>
            {{ this.name }} - <a href="{{ this.link }}" target="_blank">Buy Here</a>
        </li>
         {{/each}}
</ul>

        </div>

        <!-- Interactive Slogans Section -->
        <div class="slogans">
            <h2>Why Choose Us Again?</h2>
            <div class="slogan-text" id="slogan-text">
                <!-- Slogans will be inserted dynamically via JS -->
            </div>
        </div>

        <!-- Button to redirect to the Upload Page -->
        <div class="button-container">
            <button class="upload-again-btn" onclick="location.href='/upload'">Upload Another Image</button>
        </div>
    </div>

    <script src="result1.js"></script>
</body>
</html>
