    <title>About Us - Agri-Diagnosis</title>
    <link rel="stylesheet" href="/about.css">
</head>
<body>
    <div class="background-container">
        <!-- Navigation Bar -->
        <nav>
            <div class="logo">
                <img src="/MP_images/logo.png" alt="AgriDiagnosis Logo">
                <h1>Agri-Diagnosis</h1>
            </div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                {{!-- <li><a href="/">Services</a></li> --}}
                <li><a href="/">Contact</a></li>
            </ul>
            <div class="buttons">
                <!-- Wrap the buttons inside anchor tags to link to the login and signup routes -->
                <a href="/login">
                    <button class="login-btn">Log In</button>
                </a>
                <a href="/signup">
                    <button class="signup-btn">Sign Up</button>
                </a>
            </div>
        </nav>

        <!-- About Section -->
        <section class="about-section">
            <h2>About Agri-Diagnosis</h2>
            <p>Agri-Diagnosis is an AI-powered platform designed to assist farmers in identifying plant diseases, receiving expert consultations, and making informed decisions to ensure the health of their crops. We are dedicated to providing innovative tools to empower farmers and improve their yield.</p>
        </section>

        <!-- Services Section -->
        <section class="services">
            <h3>Our Key Services</h3>
            <div class="services-grid">
                <!-- Disease Detection -->
                <div class="service-item fade-in">
                    <img src="/MP_images/disease detection.jpg" alt="Disease Detection">
                    <h4>Disease Detection</h4>
                    <p>Upload an image of a diseased plant and receive instant AI-based analysis and recommendations for treatment.</p>
                </div>
                <!-- Expert Consultation -->
                <div class="service-item fade-in">
                    <img src="/MP_images/expert consultation.jpeg" alt="Expert Consultation">
                    <h4>Expert Consultation</h4>
                    <p>Connect with agricultural experts to get personalized advice on managing plant diseases and improving your crop health.</p>
                </div>
                <!-- Weather Alerts -->
                <div class="service-item fade-in">
                    <img src="/MP_images/whether.webp" alt="Weather Alerts">
                    <h4>Weather Alerts</h4>
                    <p>Receive timely weather updates and alerts to make informed decisions about spraying, irrigation, and crop care.</p>
                </div>
                <!-- Product Recommendations -->
                <div class="service-item fade-in">
                    <img src="/MP_images/pesticide.jpeg" alt="Product Recommendations">
                    <h4>Product Recommendations</h4>
                    <p>Find the right pesticides and equipment based on AI analysis and expert advice, all available through partner e-commerce platforms.</p>
                </div>
            </div>
        </section>

        <!-- Team Section -->
        <section class="team">
            <h3>Meet Our Team</h3>
            <div class="team-grid">
                <div class="team-member slide-up">
                    <img src="/MP_images/ved.jpg" alt="Team Member 1">
                    <h4>Vedika</h4>
                    <p>Backend Developer</p>
                </div>
                <div class="team-member slide-up">
                    <img src="/MP_images/vaish.jpg" alt="Team Member 2">
                    <h4>Vaishnavi</h4>
                    <p>Frontend Developer</p>
                </div>
                <div class="team-member slide-up">
                    <img src="/MP_images/chetna.jpg" alt="Team Member 3">
                    <h4>Chetna</h4>
                    <p>Backend Developer</p>
                </div>
            </div>
        </section>
    </div>
    
